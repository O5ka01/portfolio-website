# Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://oleoskarheinrichs.com
NEXT_PUBLIC_ANALYTICS_ENABLED=true

# Email Service (Choose one)
# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@oleoskarheinrichs.com
SENDGRID_TO_EMAIL=info@about-us-records.com

# Mailgun (Alternative)
# MAILGUN_API_KEY=your_mailgun_api_key_here
# MAILGUN_DOMAIN=your_mailgun_domain_here

# Resend (Alternative - Recommended)
# RESEND_API_KEY=your_resend_api_key_here

# Database (Optional - for storing contact submissions)
# DATABASE_URL=postgresql://user:password@localhost:5432/portfolio

# External APIs
# Spotify API (for real artist stats)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# SoundCloud API (Optional)
# SOUNDCLOUD_CLIENT_ID=your_soundcloud_client_id

# Security
# NEXTAUTH_SECRET=your_nextauth_secret_here
# NEXTAUTH_URL=https://oleoskarheinrichs.com

# Analytics & Monitoring
# SENTRY_DSN=your_sentry_dsn_here
# GOOGLE_ANALYTICS_ID=your_ga_id_here

# Rate Limiting (Redis - Optional)
# REDIS_URL=redis://localhost:6379

# Content Management
# CONTENTFUL_SPACE_ID=your_contentful_space_id
# CONTENTFUL_ACCESS_TOKEN=your_contentful_token
